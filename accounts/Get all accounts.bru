meta {
  name: Get all accounts
  type: http
  seq: 3
}

get {
  url: {{base_url}}/v2/accounts
  body: none
  auth: bearer
}

query {
  ~page[offset]: 0
  ~page[limit]: 10
}

headers {
  accept: application/json
  content-type: application/json
  EP-Beta-Features: account-authentication-settings, account-management
}

auth:bearer {
  token: {{access_token}}
}

tests {
    const json = res.getBody()
    const d = json.hasOwnProperty("data") ? json.data : json
    const accountID = Array.isArray(d) ? d[0].id : d.id
    bru.setEnvVar("accountID", accountID)
    d.each((item, index) => bru.setEnvVar(`accountId${index +1}`, item.id))
}
