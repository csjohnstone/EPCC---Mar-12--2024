}

post {
  url: {{base_url}}/pcm/hierarchies/{{hierarchyId}}/nodes
  body: json
  auth: bearer
}

headers {
  accept: application/json
  content-type: application/json
}

auth:bearer {
  token: {{access_token}}
}

body:json {
  {
    "data": {
      "type": "node",
      "attributes": {
        "name": "Gaming Keyboards",
        "description": "Gaming Keyboards",
        "slug": "gaming-keyboards"
      },
      "relationships": {
        "parent": {
          "data": {
            "id": "{{nodeId}}",
            "type": "node"
          }
        }
      }
    }
  }
}

tests {
