meta {
  name: Get all Jobs for PIM
  type: http
  seq: 1
}

get {
  url: {{base_url}}/pcm/jobs
  body: none
  auth: bearer
}

query {
  ~page[offset]: 0
  ~page[limit]: 10
}

headers {
  accept: application/json
  content-type: application/json
}

auth:bearer {
  token: {{access_token}}
}

tests {
    const json = res.getBody()
    const d = json.hasOwnProperty("data") ? json.data : json
    const pimJobId = Array.isArray(d) ? d[0].id : d.id
    bru.setEnvVar("pimJobId", pimJobId)
    d.each((item, index) => bru.setEnvVar(`pimJobId${index + 1}`, item.id))
}
