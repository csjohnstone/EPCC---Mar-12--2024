meta {
  name: Get all fields on a flow
  type: http
  seq: 7
}

get {
  url: {{base_url}}/v2/flows/{{flowSlug}}/fields
  body: none
  auth: bearer
}

query {
  ~page[offset]: 0
  ~page[limit]: 10
}

headers {
  accept: application/json
  content-type: application/json
}

auth:bearer {
  token: {{access_token}}
}

tests {
    const json = res.getBody()
    const d = json.hasOwnProperty("data") ? json.data : json
    const fieldID = Array.isArray(d) ? d[0].id : d.id
    bru.setEnvVar("fieldID", fieldID)
    d.each((item, index) => bru.setEnvVar(`fieldId${index + 1}`, item.id))
}
